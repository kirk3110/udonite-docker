FROM alpine:3.20

# BusyBox の crond を使う（dcron は入れない）
RUN apk add --no-cache mongodb-tools tzdata bash

# タイムゾーン（必要なら Asia/Tokyo に）
ENV TZ=Asia/Tokyo

# スクリプト・crontab 配置
COPY backup.sh /usr/local/bin/backup.sh
COPY crontab /etc/crontabs/root
RUN chmod +x /usr/local/bin/backup.sh

# バックアップ先
VOLUME ["/backups"]

# cron フォアグラウンド
CMD ["crond", "-f", "-l", "8"]
